{
  "name": "igo-typescript",
  "description": "Morphological analyzer for TypeScript",
  "license": "MIT",
  "version": "0.0.1",
  "author": "Yoshiaki Shin <shinyoshiaki2012@gmail.com>,Ichinose Shogo <shogo82148@gmail.com>",
  "repository": {
    "type": "git",
    "url": "https://github.com/shinyoshiaki/igo-typescript"
  },
  "bugs": {
    "url": "https://github.com/shinyoshiaki/igo-typescript/issues"
  },
  "main": "lib/index.js",
  "scripts": {
    "start": "ts-node ./igo.ts",
    "build": "tsc",
    "type": "tsc --noEmit",
    "test": "npm run type && jest"
  },
  "dependencies": {
    "typescript": "^3.6.3"
  },
  "devDependencies": {
    "@types/jest": "^24.0.18",
    "@types/node": "^12.7.5",
    "file-loader": "^4.2.0",
    "jest": "^24.9.0",
    "ts-jest": "^24.1.0",
    "ts-node": "^8.4.1",
    "tslib": "^1.10.0"
  },
  "jest": {
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js"
    ],
    "transform": {
      "^.+\\.(ts|tsx)$": "ts-jest"
    },
    "globals": {
      "ts-jest": {
        "tsConfigFile": "tsconfig.json"
      }
    },
    "testMatch": [
      "**/*.test.ts"
    ]
  }
}
